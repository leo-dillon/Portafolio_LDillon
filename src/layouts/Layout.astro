---
	import Header from "../components/Header.astro";
	import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="../../public/styles/colors.css">
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body>
		<Header/>
		<main>
			<slot />
		</main>
		<div class="modal">
			<div class="imagenes"></div>
		</div>
		<Footer />
	</body>
</html>

<style is:global>
	*{
		padding: 0;
		margin: 0;
		list-style: none;
		text-decoration: none;
		font-size: 16px;
		font-family: "Roboto";
		scroll-behavior: smooth;
	}
	body{
		background-color: var(--blue);
		min-height: 100vh;
	}
	main{
		min-height: calc(100vh - 370px);
	}
	div.modal{
		opacity: 0;
		z-index: -1000;
	}
	div.modal.activado {
		width: 100vw;
		height: 100vh;
		position: fixed;
		top: 0;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: var(--background--color-light-blue-70);
		opacity: 1;
		z-index: 100;
		transition: opacity .2s ease-out;
	}
	div.modal div.imagenes {
		width: 100%;
		max-width: 1000px;
		max-height: 600px; 
		padding: 12px;
		border-radius: 12px;
		background-color: var(--background--color-light-white);
		opacity: 10%;
		transition: opacity .3s ease-out;
	}
	div.modal.activado div.imagenes{
		position: relative;
		opacity: 100%;
	}
	div.modal.activado div.imagenes button{
		position: absolute;
		top: 12px;
		right: 12px;
		background-color: var(--background--color-light-blue-70);
		color: var(--text--color-white);
		padding: 8px;
		border-radius: 4px;
		border: 0;
	}
	div.modal.activado div.imagenes small{
		color: var( --text--color-black);
		opacity: .8;
		cursor: default;
	}
	div.modal div.imagenes img{
		width: 100%;
		border-radius: 12px;
	}
</style>
