---
import Php from "../svg/technologies/Php.astro";
import Html from "../svg/technologies/Html.astro";
import Css from "../svg/technologies/Css.astro";
import MySQL from "../svg/technologies/MySQL.astro";
import JavaScript from "../svg/technologies/JavaScript.astro";
import GitHub from "../svg/networks/GitHub.astro";
import Git from "../svg/technologies/Git.astro";
import Web from "../svg/networks/Web.astro";
---

<section class="proyects" id="proyects">
    <h2>PROYECTOS</h2>
    <h3>
        <span>P</span>ROYECTOS
    </h3>
    <div>
        <article>
            <picture>
                <img
                    src="../../../public/pictures/fragance.png"
                    alt="Foto del proyecto"
                />
            </picture>
            <div class="info">
                <h4>Fragance</h4>
                <p class="description">
                    Desarrollé un e-commerce especializado en perfumería con un
                    enfoque en la experiencia de usuario intuitiva. <br> <br>
                    <span>Los usuarios</span> pueden explorar productos, registrarse y gestionar su
                    información personal y su carrito de compras. <br> <br>
                    <span>Los administradores</span> pueden gestionar productos, marcas, géneros y usuarios.
                </p>
                <div class="proyects_technology">
                    <Html
                        width="32"
                        height="32"
                        color="var(--hover--color-white)"
                    />
                    <Css 
                        width="32" 
                        height="32" 
                        color="var(--hover--color-white)" 
                    />
                    <JavaScript
                        width="32"
                        height="32"
                        color="var(--hover--color-white)"
                    />
                    <Php 
                        width="32" 
                        height="32" 
                        color="var(--hover--color-white)" 
                    />
                    <MySQL
                        width="32"
                        height="32"
                        color="var(--hover--color-white)"
                    />
                    <Git
                        width="32"
                        height="32"
                        color="var(--hover--color-white)"
                    />
                </div>
                <div class="proyects_networks">
                    <a class="linkNetwork" href="https://github.com/leo-dillon/PII-DILLON-FINAL" title="Ver repositorío Git Hub">
                    <GitHub 
                        width="32" 
                        height="32" 
                        color="var(--hover--color-white)"
                        />
                    </a>
                    <a class="linkNetwork" href="https://github.com/leo-dillon/PII-DILLON-FINAL" title="Ver repositorío Git Hub">
                        <Web 
                        width="32" 
                        height="32" 
                        color="var(--hover--color-white)"
                        />
                    </a>
                </div>
                <a class="btn_VerMas" href="" title="">
                    Saber Más
                </a>
            </div>
        </article>
    </div>
</section>

<style>
    section.proyects {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 90%;
        margin: 0 auto;
        padding-top: 32px;
        position: relative;
    }
    section.proyects h2 {
        width: 100%;
        position: absolute;
        top: 42px;
        text-align: center;
        line-height: var(--font-52);
        text-transform: uppercase;
        text-wrap: nowrap;
        font-size: var(--font-52);
        font-weight: 700;
        color: rgba(21, 27, 41, 0.8);
        width: 100%;
    }
    section.proyects h3 {
        position: relative;
        text-align: center;
        font-size: var(--font-32);
        border-bottom: 1px solid var(--text--color-white);
        margin: 32px 0;
    }
    section.proyects h3 span {
        font-size: var(--font-32);
        color: var(--text--color-yellow);
    }
    section.proyects div article {
        width: calc(100% - 24px);
        margin: 0 auto;
        padding: 12px;
        border-radius: 24px;
        background-color: var(--background--color-light-blue2);
        box-shadow: 0 0 12px var(--hover--color-white);
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 12px;
        overflow: hidden;
    }
    section.proyects div article picture {
        width: 100%;
        margin: 0 auto;
    }
    section.proyects div article picture img {
        width: 100%;
        border-radius: 28px;
        transform-origin: bottom;
        transition: scale 0.2s ease-out;
    }
    section.proyects div article:hover picture img {
        scale: 1.2;
    }
    section.proyects div article div.info{
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 24px;
    }
    section.proyects div article div.info h4 {
        text-align: start;
        font-size: var(--font-32);
        letter-spacing: 4px;
    }
    section.proyects div article div.info p.description {
        margin-left: auto;
        opacity: 0.8;
    }
    section.proyects div article div.info p.description span {
        color: var(--text--color-yellow);
    }
    section.proyects div article div.info div{
        margin: 4px 0;
    }
    section.proyects div article div.info div.proyects_technology{
        padding: 8px 0;
        border-top: 2px solid var(--hover--color-white);
        border-bottom: 2px solid var(--hover--color-white);
        display: flex;
        justify-content: space-evenly;
        flex-wrap: wrap;
        gap: 12px;
    }
    section.proyects div article div.info div.proyects_networks{
        position: absolute;
        top: 0px;
        right: 12px;
        display: flex;
        align-items: center;
        gap: 24px;
    }
    section.proyects div article div.info a.btn_VerMas{
        padding: 12px;
        border-radius: 12px;
        color: var(--text--color-white);
        font-size: var(--font-20);
        text-align: center;
        display: none;
    }
</style>
