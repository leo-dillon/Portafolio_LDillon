<style>
    section.technologies {
        position: relative;
        width: 90%;
        margin: 32px auto;
        text-align: center;
    }
    section.technologies h2 {
        position: absolute;
        top: -12px;
        width: 100%;
        text-align: center;
        line-height: var(--font-48);
        text-transform: uppercase;
        text-wrap: nowrap;
        font-size: var(--font-48);
        font-weight: 700;
        color: rgba(21, 27, 41, 0.8);
    }
    section.technologies h3 {
        position: relative;
        margin: 32px 0;
        border-bottom: 1px solid var(--text--color-white);
        text-align: center;
        font-size: var(--font-32);
    }
    section.technologies h3 span {
        font-size: var(--font-32);
        color: var(--text--color-yellow);
    }
    .tech-list {
        width: 100%;
        padding: 0;
        margin: 12px 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 12px;
        list-style: none;
    }
    .tech-list li {
        width: 90px;
        padding: 12px 2px;
        border-radius: 8px;
        background-color: var(--background--color-light-blue);
        box-shadow: 0px 0px 2px var(--background--color-white);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        transition: box-shadow .2s ease-out ;
    }
    .tech-list li:hover {
        box-shadow: 0 0 12px var(--background--color-white);;
    }
    .tech-list li span{
        font-size: var(--font-16);
        color: var(--text--color-white);
    }

    .tech-list span {
        font-weight: bold;
        color: #333;
    }
</style>
