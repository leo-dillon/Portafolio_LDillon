---
import AstroSVG from "../svg/technologies/AstroSVG.astro";
import Boostrap from "../svg/technologies/Boostrap.astro";
import Css from "../svg/technologies/Css.astro";
import Git from "../svg/technologies/Git.astro";
import Html from "../svg/technologies/Html.astro";
import JavaScript from "../svg/technologies/JavaScript.astro";
import Laravel from "../svg/technologies/Laravel.astro";
import MongoDB from "../svg/technologies/MongoDB.astro";
import MySQL from "../svg/technologies/MySQL.astro";
import React from "../svg/technologies/React.astro";
import Sass from "../svg/technologies/Sass.astro";
import Tailwind from "../svg/technologies/Tailwind.astro";
import Vue from "../svg/technologies/Vue.astro";
import WordPress from "../svg/technologies/WordPress.astro";
import Php from "../svg/technologies/Php.astro";
import Kotlin from "../svg/technologies/Kotlin.astro";
---

<section class="technologies">
    <h2>Tecnologías</h2>
    <h3><span>T</span>ecnologías</h3>
    <ul class="tech-list">
        <li class="tech-html">
            <Html width="42" heigth="42"  />
            <span> HTML </span>
        </li>
        <li class="tech-css">
            <Css width="42" height="42"/>
            <span> CSS </span>
        </li>
        <li class="tech-js">
            <JavaScript width="42" heigth="42" />
            <span> JavaScript </span>
        </li>
        <li class="tech-php">
            <Php width="42" heigth="42" />
            <span> PHP </span>
        </li>
        <li class="tech-git">
            <Git width="42" heigth="42" />
            <span> Git </span>
        </li>
        <li class="tech-sass">
            <Sass width="42" heigth="42" />
            <span> Sass </span>
        </li>
        <li class="tech-boostrap">
            <Boostrap width="42" heigth="42" />
            <span> Bootstrap </span>
        </li>
        <li class="tech-tailwind">
            <Tailwind width="42" heigth="42" />
            <span> Tailwind </span>
        </li>
        <li class="tech-astro">
            <AstroSVG width="42" heigth="42" />
            <span> Astro </span>
        </li>
        <li class="tech-react">
            <React width="42" heigth="42" />
            <span> React </span>
        </li>
        <li class="tech-vue">
            <Vue width="42" heigth="42" />
            <span> Vue </span>
        </li>
        <li class="tech-laravel">
            <Laravel width="42" heigth="42" />
            <span> Laravel </span>
        </li>
        <li class="tech-mysql">
            <MySQL width="42" heigth="42" />
            <span> MySQL </span>
        </li>
        <li class="tech-mongodb">
            <MongoDB width="42" heigth="42" />
            <span> MongoDB </span>
        </li>
        <li class="tech-wordpress">
            <WordPress width="42" heigth="42" />
            <span> WordPress </span>
        </li>
        <li class="tech-kotlin">
            <Kotlin width="42" heigth="42" />
            <span> Kotlin </span>
        </li>
    </ul>
</section>

<style>
    section.technologies {
        position: relative;
        width: 90%;
        max-width: 1200px;
        margin: 0% auto;
        padding: 52px 0;
        text-align: center;
        color: var(--text--color-white);
    }
    section.technologies h2 {
        position: absolute;
        top: 32px;
        width: 100%;
        text-align: center;
        line-height: var(--font-48);
        text-transform: uppercase;
        text-wrap: nowrap;
        font-size: var(--font-48);
        font-weight: 700;
        color: rgba(21, 27, 41, 0.8);
    }
    section.technologies h3 {
        width: 100%;
        position: relative;
        margin: 32px 0;
        border-bottom: 1px solid var(--text--color-white);
        text-align: center;
        font-size: var(--font-32);
    }
    section.technologies h3 span {
        font-size: var(--font-32);
        color: var(--text--color-yellow);
    }
    .tech-list {
        width: 100%;
        padding: 0;
        margin: 12px 0;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 18px;
        list-style: none;
    }
    .tech-list li {
        width: 90px;
        padding: 12px 2px;
        border-radius: 8px;
        background-color: var(--background--color-light-blue);
        box-shadow: 0px 0px 2px var(--background--color-white);
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
        color: var(--text--color-white);
        transition: box-shadow 0.2s .3s ease-out, scale 0.2s .3s , color 0.2s .3s ease-out;
    }
    .tech-list li:hover{
        scale: 1.1;
        transition: box-shadow 0.2s ease-out;
    }
    .tech-list li span{
        font-size: var(--font-16);
        font-weight: bold;
        transition: color 0.2 .3s ease-out;
    }

    
    .tech-list li.tech-html:hover{ 
        color: #E44D26; 
        box-shadow: 0 0 12px #E44D26;
    }    
    
    .tech-list li.tech-css:hover{ 
        color: #264DE4; 
        box-shadow: 0 0 12px #264DE4;
    }     
    
    .tech-list li.tech-js:hover{ 
        color: #F0DB4F; 
        box-shadow: 0 0 12px #F0DB4F;
    }      
    
    .tech-list li.tech-php:hover{ 
        color: #777BB4; 
        box-shadow: 0 0 12px #777BB4;
    }     
    
    .tech-list li.tech-git:hover{ 
        color: #F1502F; 
        box-shadow: 0 0 12px #F1502F;
    }     
         
    .tech-list li.tech-sass:hover{ 
        color: #CF649A; 
        box-shadow: 0 0 12px #CF649A;
    }    
    
    .tech-list li.tech-boostrap:hover{ 
        color: #7952B3; 
        box-shadow: 0 0 12px #7952B3;
    }
    
    .tech-list li.tech-tailwind:hover{ 
        color: #38BDF8; 
        box-shadow: 0 0 12px #38BDF8;
    }
    
    .tech-list li.tech-astro:hover{ 
        color: #FF5D01; 
        box-shadow: 0 0 12px #FF5D01;
    }   
    
    .tech-list li.tech-react:hover{ 
        color: #61DBFB; 
        box-shadow: 0 0 12px #61DBFB;
    }   
    
    .tech-list li.tech-vue:hover{ 
        color: #42b883; 
        box-shadow: 0 0 12px #42b883;
    }     
    
    .tech-list li.tech-laravel:hover{ 
        color: #FF2D20; 
        box-shadow: 0 0 12px #FF2D20;
    } 
    
    .tech-list li.tech-mysql:hover{ 
        color: #00758F; 
        box-shadow: 0 0 12px #00758F;
    }   
    
    .tech-list li.tech-mongodb:hover{ 
        color: #4DB33D; 
        box-shadow: 0 0 12px #4DB33D;
    } 
    
    .tech-list li.tech-wordpress:hover{ 
        color: #21759B; 
        box-shadow: 0 0 12px #21759B;
    }
    
    .tech-list li.tech-kotlin:hover{ 
        color: #A97BFF; 
        box-shadow: 0 0 12px #A97BFF;
    } 

</style>
