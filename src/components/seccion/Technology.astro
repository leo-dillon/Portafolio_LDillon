<script>
    import Close        from "../svg/Close.astro";
    import tech         from "../../data/tech.json"
    let listas = (document.querySelector('.tech-list'))?.querySelectorAll('li');
    let content: any = document.querySelector('.descriptionTech')
    let timer: any;
    listas?.forEach(li => {
        li.addEventListener('click', () => {
            content.innerHTML = ""
            content?.classList.add('active')
            let liName = li.innerText
            let liImg: any = li.querySelector("svg")?.cloneNode(true)
            content?.prepend( liImg )
            content.innerHTML += `
                <h2 style="font-size: 26px; margin: 8px 0 16px"> ${ liName } </h2>
                <p style="max-width: 700px; font-size: 20px; text-align: start; opacity:0.7; margin: 8px auto; text-wrap: pretty;" > ${ tech[liName] } </p>
                <button style="font-size: 26px;width:32px;position:absolute; top:12px; right:12px; border: none; padding: 3px; background-color: transparent; cursor: pointer; height: 42px;" class="btnClose">    
                    ❌
                </button>
            `
            content.querySelector('button').addEventListener( 'click', () => {
                content.classList.remove('active')
            })
            clearTimeout( timer )
            timer = setTimeout(() => {
                content.classList.remove('active')
            }, 10000 );
        })
    });
</script>

