<script>
  async function formSubmit( e:Event ){
    e.preventDefault()
    let form = e.target as HTMLFormElement
    let form_data = new FormData( form )

    try {
      const button = document.querySelector('.btnSubmit')
      button?.setAttribute('disabled', 'true')
      button.innerHTML = 'Enviando...'

      let response = await fetch('/api/send-email', {
        method: 'POST',
        headers: {
          "Content-Type": "application/json"
        },
        body: JSON.stringify(Object.fromEntries(form_data))
      })
      let result = await response.json()

      const modal = document.querySelector('.modal')
      if( result.envio ){
        modal?.classList.add('active')
        if(modal) modal.innerHTML = `<p class="success">✅ ${result.message}</p>`
        button.innerHTML = 'Mensaje enviado'
      } 
        else 
      {
        modal?.classList.add('active')
        if(modal) modal.innerHTML = `<p class="error">❌ ${result.message}</p>`
        button?.classList.add('error')
        button.innerHTML = 'Error al enviar el mensaje'
        setTimeout( () => {
          button?.removeAttribute('disabled')
          button?.classList.remove('error')
          button.innerHTML = 'Enviar mensaje'
        }, 1500 )
      }

      setTimeout( () => {
        modal?.classList.remove('active')
      }, 3000)

    } catch (error) {
      console.error(error)
    }
  }

  function formEvent(){
    let form = document.querySelector('form.contact-form')
    if(!form) return
    form.removeEventListener('submit', formSubmit)
    form.addEventListener('submit', formSubmit)
  }

  formEvent()
  
  document.addEventListener('astro:after-swap', () => {
    formEvent()
  })

</script>

