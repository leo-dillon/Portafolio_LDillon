    <input type="text" name="nombre" id="nombre" required placeholder="Estaban Camello" value="Estaban Camello"/>
  </div>

  <div>
    <label for="email">Correo:</label>
    <input type="email" name="email" id="email" required  placeholder="estebanCamello33@gmail.com" value="estebanCamello33@gmail.com"/>
  </div>
  
  <div>
    <label for="mensaje">Mensaje:</label>
    <textarea name="mensaje" id="mensaje" rows="5" required>  AA  </textarea>
  </div>

  <button class="btnSubmit">Enviar mensaje</button>
